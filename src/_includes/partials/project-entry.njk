<h3 class="postlist-item{% if project.url == url %} projectlist-item-active{% endif %}">
    <a href="{{ project.url | url }}" class="postlist-link">{% if project.data.title %}{{ project.data.title }}{% else %}<code>{{ project.url }}</code>{% endif %}</a>
</h3>
<time datetime="{{ project.date | htmlDateString }}" class="text-500 gap-right-300 color-secondary"><em>{{ project.date | readableDate }}</em></time> 
<p>{{ project.data.description | safe }}</p>

{% for tag in project.data.tags | filterTagList %}
{% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
<a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
{% endfor %}
